{
  "add-field-type": [
    {
      "name": "summaryType",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.StopFilterFactory",
            "words": "lang/stopwords_en.txt",
            "ignoreCase": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.EnglishPossessiveFilterFactory"
          },
          {
            "class": "solr.KeywordMarkerFilterFactory",
            "protected": "protwords.txt"
          },
          {
            "class": "solr.PorterStemFilterFactory"
          }
        ]
      }
    },
    {
      "name": "titleType",
      "class": "solr.TextField",
      "analyzer": {
        "tokenizer": {
          "class": "solr.LowerCaseTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.CommonGramsFilterFactory"
          },
          {
            "class": "solr.BeiderMorseFilterFactory",
            "nameType": "GENERIC",
            "ruleType": "APPROX",
            "concat": true,
            "languageSet": "auto"
          }
        ]
      }
    }
  ],
  "add-field": [
    {
      "name": "plot",
      "type": "summaryType",
      "indexed": true,
      "stored": true
    },
    {
      "name": "title",
      "type": "titleType",
      "indexed": true,
      "stored": true
    },
    {
      "name": "year",
      "type": "pint",
      "indexed": true,
      "stored": true
    },
    {
      "name": "original_title",
      "type": "titleType",
      "indexed": true,
      "stored": true
    },
    {
      "name": "description",
      "type": "summaryType",
      "indexed": true,
      "stored": true
    },
    {
      "name": "imdb_title_id",
      "type": "string",
      "indexed": true,
      "stored": true
    }
  ]
}
